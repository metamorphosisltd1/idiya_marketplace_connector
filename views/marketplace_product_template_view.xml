<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="marketplace_product_template_view_form" model="ir.ui.view">
        <field name="name">marketplace.product.template.view.form</field>
        <field name="model">marketplace.product.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_template_id"/>
                            <field name="product_id"/>
                            <field name="category_ref_id"/>
                        </group>
                        <group>
                            <field name="product_template_qty"/>
                            <field name="product_qty"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="marketplace_product_template_view_tree" model="ir.ui.view">
        <field name="name">marketplace.product.template.view.tree</field>
        <field name="model">marketplace.product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="config_id"/>
                <field name="product_template_id"/>
                <field name="ref_code"/>
                <!-- <field name="config_id"/> -->
                <field name="category_ref_id"/>
                <field name="product_qty"/>
            </tree>
        </field>
    </record>

    <record id="action_marketplace_product_template" model="ir.actions.act_window">
        <field name="name">Marketplace Template</field>
        <field name="res_model">marketplace.product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>
    
    <menuitem id="menu_marketplace_product_template" action="action_marketplace_product_template" parent="website.menu_website_global_configuration"
            sequence="46" name="Marketplace Products" groups="base.group_system"/>

</odoo>
